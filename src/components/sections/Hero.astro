---
// This code is executed in the server
import { basics } from '@cv'
import Section from '@/components/Section.astro'

const { name, label, image, email, phone, location, profiles } = basics
const { city, region } = location
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <!-- Icon -->
                {city}, {region}
            </span>
            <footer>
                {
                    email && (
                        <a 
                            href={`mailto:${email}`}
                            title={`Sen an email to ${name} at ${email}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            {email}
                        </a>
                    )
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

